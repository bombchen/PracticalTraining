<script type="text/javascript">
    $(function () {
        $('#dp').datepicker();
    });
</script>

<div class="page-header">
  <h1><a href="/reports/category" style="text-decoration: none" data-remote="true">分类统计</a></h1>
</div>
<div class="controls-row">
  <%= form_tag '/reports/category', :method => 'get', :remote => true %>
  <table class="table table-striped">
    <thead>
    <tr>
      <th>统计开始时间</th>
      <th>类别</th>
      <th></th>
    </tr>
    </thead>
    <tbody>
    <tr>
      <td><%= text_field_tag  :dt, @begin_date.to_date, :class => 'text_field', :id => 'dp' %></td>
      <td><%= select_tag :typ, options_from_collection_for_select(FacilityCategory.get_simple_selectors, :id, :name, @filter_category) %></td>
      <td><%= submit_tag '生成报表', :class => 'btn btn-primary' %></td>
    </tr>
    </tbody>
  </table>
</div>
<table class="table table-striped">
  <thead>
  <tr>
    <th NoWrap>资产名称</th>
    <th NoWrap>类别</th>
    <th NoWrap>增加数量</th>
    <th NoWrap>减少数量</th>
    <th NoWrap>数量变动</th>
    <th NoWrap>成本变动</th>
    <th NoWrap>现有库存</th>
  </tr>
  </thead>
  <tbody>
  <% @reports.keys.each do |facility| %>
      <% report = @reports[facility] %>
      <tr>
        <td NoWrap><%= report.facility.name %></td>
        <td NoWrap><%= report.facility.facility_category.name %></td>
        <td NoWrap><%= report.in_amount.to_s %></td>
        <td NoWrap><%= report.out_amount.to_s %></td>
        <td NoWrap><%= (report.in_amount - report.out_amount).to_s %></td>
        <td NoWrap><%= (report.in_amount - report.out_amount) * facility.unit_price %></td>
        <td NoWrap><%= report.remaining.to_s %></td>
      </tr>
  <% end %>
  </tbody>
</table>
