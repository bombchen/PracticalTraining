<%- model_class = Stocking -%>
<div class="page-header">
  <h1>新建资产盘点</h1>
</div>
<%= form_for @stocking, :html => { :class => 'form-horizontal' } do |f| %>
    <% if @stocking.errors.any? %>
        <div id="error_explanation">
          <h2><%= t('errors.template.header',
                    :model=> @stocking.class.model_name.human,
                    :count=> @stocking.errors.count) %>
          </h2>
          <ul>
            <% @stocking.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>
    <div class="control-group">
      <%= f.label '标题', :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :title, :class => 'text_field' %>
      </div>
    </div>
    <div class="control-group">
      <%= f.label '备注', :class => 'control-label' %>
      <div class="controls">
        <%= f.text_area :comments, :class => 'text_area', :rows => 10 %>
      </div>
    </div>

    <div class="form-actions">
      <%= f.submit '确定',
                   :class => 'btn btn-primary' %>
      <%= link_to '取消',
                  stockings_path, :class => 'btn' %>
    </div>
<% end %>
