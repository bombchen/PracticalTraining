<%- model_class = UserRoleMapping -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:user_id) %>:</strong></dt>
  <dd><%= @user_role_mapping.user_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:role_id) %>:</strong></dt>
  <dd><%= @user_role_mapping.role_id %></dd>
</dl>

<div class="form-actions">
  <%= link_to '返回',
              user_role_mappings_path, :class => 'btn'  %>
  <%= link_to '编辑',
              edit_user_role_mapping_path(@user_role_mapping), :class => 'btn' %>
  <%= link_to '删除',
              user_role_mapping_path(@user_role_mapping),
              :method => 'delete',
              :data => { :confirm => '确认删除？' },
              :class => 'btn btn-danger' %>
</div>
