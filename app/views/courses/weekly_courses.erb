<%- model_class = Course -%>
<div class="page-header">
  <h1>实训课程管理</h1>
</div>
<table class="table table-striped">
  <thead>
  <tr>
    <th NoWrap>日期</th>
    <th NoWrap>星期</th>
    <th NoWrap>课时</th>
    <th NoWrap>班级</th>
    <th NoWrap>课程名称</th>
    <th NoWrap>教师姓名</th>
    <th NoWrap>场地</th>
    <th NoWrap>状态</th>
    <th NoWrap>操作</th>
  </tr>
  </thead>
  <tbody>
  <% @courses.each do |course| %>
      <tr>
        <td NoWrap><%= course.date %></td>
        <td NoWrap><%= course.weekday %></td>
        <td NoWrap><%= course.idx %></td>
        <td NoWrap><%= course.cls %></td>
        <td NoWrap><%= course.title %></td>
        <td NoWrap><%= ApplicationHelper.get_teacher_name_by_id(course.teacher_id) %></td>
        <td NoWrap><%= course.field.name %></td>
        <td NoWrap><%= course.course_review.get_status %></td>
        <td NoWrap><%= link_to '查看',
                               course_path(course), :class => 'btn btn-mini' %>
          <%= link_to '修改',
                      edit_course_path(course), :class => 'btn btn-mini btn-primary' %>
          <%= link_to '删除',
                      course_path(course),
                      :method => :delete,
                      :confirm => '确认删除 '+course.date.to_s()+course.title+'?',
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
  <% end %>
  </tbody>
</table>

<%= link_to '申请课程',
            new_course_path,
            :class => 'btn btn-primary' %>
