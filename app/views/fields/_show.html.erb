<%- model_class = Field -%>
<div class="page-header">
  <h1>实训场地信息</h1>
</div>

<dl class="dl-horizontal">
  <dt><strong>场地:</strong></dt>
  <dd><%= @field.name %></dd>
  <dt><strong>描述:</strong></dt>
  <dd><%= @field.description %></dd>
  <dt><strong>状态:</strong></dt>
  <dd><%= @field.field_status.name %></dd>
  <dt><strong>是否可用:</strong></dt>
  <dd><%= @field.field_status.availability_name %></dd>
</dl>

<div class="form-actions">
  <%= link_to '返回',
              fields_path, :class => 'btn', :remote => true  %>
  <%= link_to '编辑',
              edit_field_path(@field), :class => 'btn btn-primary', :remote => true %>
</div>
