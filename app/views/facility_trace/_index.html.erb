<div class="page-header">
  <h1>库存跟踪</h1>
</div>
<table class="table table-striped">
  <thead>
  <tr>
    <th NoWrap>名称</th>
    <th NoWrap>单位</th>
    <th NoWrap>数量</th>
    <th NoWrap>预警线</th>
    <th NoWrap>类型</th>
    <th NoWrap>部门</th>
    <th NoWrap>分类</th>
    <th NoWrap>资产编号</th>
    <th NoWrap>操作</th>
  </tr>
  </thead>
  <tbody>
  <% @facilities.each do |facility| %>
      <tr>
        <td NoWrap><%= facility.name %></td>
        <td NoWrap><%= facility.unit %></td>
        <td NoWrap><%= facility.facility_total.total %></td>
        <td NoWrap><%= facility.alert_amount %></td>
        <td NoWrap><%= facility.facility_type_name %></td>
        <td NoWrap><%= facility.department.name %></td>
        <td NoWrap><%= facility.facility_category.name %></td>
        <td NoWrap><%= facility.asset_id %></td>
        <td NoWrap><%= link_to '跟踪',
                               facility_trace_path(facility), :class => 'btn btn-mini', :remote => true %></td>
      </tr>
  <% end %>
  </tbody>
</table>
<%= ajax_will_paginate @facilities %>