<%- model_class = FacilityReason -%>
<div class="page-header">
  <h1>出入库事由管理</h1>
</div>
<table class="table table-striped">
  <thead>
  <tr>
    <th>原因</th>
    <th>出/入库</th>
    <th>属性</th>
    <th>操作</th>
  </tr>
  </thead>
  <tbody>
  <% @facility_reasons.each do |facility_reason| %>
      <tr>
        <td><%= facility_reason.reason %></td>
        <td><%= facility_reason.in_or_out %></td>
        <td><%= facility_reason.systematic_name %></td>
        <td>
          <%= link_to '查看',
                      facility_reason_path(facility_reason), :class => 'btn btn-mini', :remote => true %>
          <%= link_to '编辑',
                      edit_facility_reason_path(facility_reason), :class => 'btn btn-mini btn-primary', :remote => true %>
          <%= link_to '删除',
                      facility_reason_path(facility_reason),
                      :method => :delete,
                      :data => { :confirm => '确认删除 '+facility_reason.reason + '？' },
                      :class => 'btn btn-mini btn-danger', :remote => true %>
        </td>
      </tr>
  <% end %>
  </tbody>
</table>
<%= ajax_will_paginate @facility_reasons %>

<%= link_to '新建',
            new_facility_reason_path,
            :class => 'btn btn-primary', :remote => true %>
