<%= form_for @department, :html => {:class => 'form-horizontal'} do |f| %>
    <% if @department.errors.any? %>
        <div id="error_explanation">
          <h2><%= t('errors.template.header',
                    :model => @department.class.model_name.human,
                    :count => @department.errors.count) %>
          </h2>
          <ul>
            <% @department.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>
    <div class="control-group">
      <%= f.label '名称', :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :name, :class => 'text_field' %>
      </div>
    </div>
    <div class="control-group">
      <%= f.label '简介', :class => 'control-label' %>
      <div class="controls">
        <%= f.text_area :description, :class => 'text_area', :rows => 10 %>
      </div>
    </div>

    <div class="form-actions">
      <%= f.submit '确定', :class => 'btn btn-primary', :disable_with => '请稍等...' %>
      <%= link_to '取消',
                  departments_path, :class => 'btn' %>
    </div>
<% end %>
