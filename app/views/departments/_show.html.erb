<%- model_class = Department -%>
<div class="page-header">
  <h1>查看部门</h1>
</div>

<dl class="dl-horizontal">
  <dt><strong>名称:</strong></dt>
  <dd><%= @department.name %></dd>
  <dt><strong>简介:</strong></dt>
  <dd><%= @department.description %></dd>
</dl>

<div class="form-actions">
  <%= link_to '返回',
              departments_path, :class => 'btn', :remote => true %>
  <%= link_to '编辑',
              edit_department_path(@department), :class => 'btn btn-primary', :remote => true %>
  <%= link_to '删除',
              department_path(@department),
              :method => 'delete',
              :data => {:confirm => '确认删除？'},
              :class => 'btn btn-danger', :remote => true %>
</div>
